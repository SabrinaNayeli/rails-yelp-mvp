<h1>Add a new restaurant</h1>

<%= form_for @restaurant do |f| %>
  <%= f.label :name, "Enter a restaurant"%>
  <%= f.text_field :name %>

  <%= f.label :address, "Enter adress" %>
  <%= f.text_field :address %>

  <%= label :phone_number, "Enter a phone number"%>
  <%= f.text_field :phone_number %>

  <%= f.label :category, "Enter a category" %>
  <%= f.select :category, ['french', 'italian', 'belgian', 'chinese', 'japaneses']%>

  <%= f.submit "Add" %>

<% end %>

 <p><%= link_to "Back to the Restaurants List", restaurants_path %></p>
