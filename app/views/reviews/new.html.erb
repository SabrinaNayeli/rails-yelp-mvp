<h1>Add a review</h1>

<%= form_for @review do |f| %>
  <%= f.label :content, "Enter your review"%>
  <%= f.text_field :content %>

  <%= f.label :rating, "Enter a category" %>
  <%= f.select :rating, [1, 2, 3, 4, 5]%>

  <%= f.submit "Add" %>

<% end %>

 <p><%= link_to "Back to the Restaurants List", restaurants_path %></p>
